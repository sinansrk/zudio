    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .store-section {
            padding: 60px 0;
            text-align: center;
        }

        .store-section h2 {
            font-weight: 700;
            color: #111;
            margin-bottom: 40px;
        }

        .store-card {
            background: #fff;
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .store-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

        .store-card .card-body {
            padding: 20px;
        }

        .store-card h5 {
            color: #000;
            font-weight: 600;
        }

        .store-card p {
            color: #555;
            font-size: 15px;
        }

        .map-link {
            text-decoration: none;
            color: #007bff;
            font-weight: 500;
        }

        .map-link:hover {
            text-decoration: underline;
        }

        footer {
            background-color: #000;
            color: #fff;
            padding: 40px 0;
            margin-top: 95px;
            text-align: center;
        }

        .zudio {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        footer h5 {
            font-weight: 600;
            margin-bottom: 15px;
            letter-spacing: 1px;
            text-align: center;
        }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: 30px;
            padding-top: 15px;
            font-size: 14px;
            color: #aaa;
        }
    </style>
</head>

